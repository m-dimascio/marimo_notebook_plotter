{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "runtime": "V2",
    "numReplicas": 2,
    "minReplicas": 1,
    "maxReplicas": 3,
    "startCommand": "marimo run directory_explorer_v11.py --host 0.0.0.0 --port $PORT --headless --mode app",
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 2,
    "autoscaling": {
      "enabled": true,
      "targetCPUUtilizationPercentage": 70,
      "targetMemoryUtilizationPercentage": 80,
      "scaleUpCooldown": 60,
      "scaleDownCooldown": 300
    },
    "resources": {
      "memoryRequest": "256Mi",
      "memoryLimit": "1Gi",
      "cpuRequest": "100m",
      "cpuLimit": "1000m"
    }
  }
}